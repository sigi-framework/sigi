{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "ES2020",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "../packages",
    "paths": {
      "react": ["node_modules/@types/react"],
      "vue": ["node_modules/vue"],
      "@sigi/*": ["./*/src/index.ts"]
    }
  },
  "include": ["./**/*"]
}
